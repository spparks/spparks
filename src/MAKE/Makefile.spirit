# spirit = HP cluster with dual 3.4 GHz EM64T (64 bit), mpiCC, native MPI

SHELL = /bin/sh
.IGNORE:

# System-specific settings

CC =		mpiCC
CCFLAGS =	-O
DEPFLAGS =	-M
LINK =		mpiCC
LINKFLAGS =	-O
USRLIB =	
SYSLIB =	-lstdc++ -lm
SIZE =		size

# Link rule

$(EXE):	$(OBJ)
	$(LINK) $(LINKFLAGS) $(OBJ) $(USRLIB) $(SYSLIB) -o $(EXE)
	$(SIZE) $(EXE)

# Compilation rules

%.o:%.cpp
	$(CC) $(CCFLAGS) -c $<

%.d:%.cpp
	$(CC) $(CCFLAGS) $(DEPFLAGS) $< > $@

# Individual dependencies

DEPENDS = $(OBJ:.o=.d)
include $(DEPENDS)
